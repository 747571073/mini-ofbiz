<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main-decorator">
        <section>
            <actions>
                <set field="layoutSettings.styleSheets[+0]" value="/example/assets/css/dpl-min.css"/>
                <set field="layoutSettings.styleSheets[+1]" value="/example/assets/css/bui-min.css"/>
                <set field="layoutSettings.styleSheets[+2]" value="/example/assets/css/main.css"/>
            </actions>
            <widgets>
            	<platform-specific>
            		<html><html-template location="component://example/webapp/example/includes/header.ftl"/></html>
            	</platform-specific>
                <decorator-section-include name="body"/>
                <platform-specific>
            		<html><html-template location="component://example/webapp/example/includes/footer.ftl"/></html>
            	</platform-specific>
            </widgets>
        </section>
    </screen>

    <screen name="ExampleCommonDecorator">
        <section>
            <actions>
                <set field="layoutSettings.styleSheets[+0]" value="/example/assets/css/dpl-min.css"/>
                <set field="layoutSettings.styleSheets[+1]" value="/example/assets/css/bui-min.css"/>
                <set field="layoutSettings.styleSheets[+2]" value="/example/assets/css/page.css"/>
            </actions>
            <widgets>
                <platform-specific>
                    <html><html-template location="component://example/webapp/example/includes/header.ftl"/></html>
                </platform-specific>
                <container style="container">
                    <section>
                        <condition>
                            <if-has-permission permission="EXAMPLE" action="_VIEW"/>
                        </condition>
                        <widgets>
                            <decorator-section-include name="body"/>
                        </widgets>
                        <fail-widgets>
                            <label style="h3">${uiLabelMap.AdminViewPermissionError}</label>
                        </fail-widgets>
                    </section>
                </container>
                <platform-specific>
                    <html><html-template location="component://example/webapp/example/includes/footer.ftl"/></html>
                </platform-specific>
            </widgets>
        </section>
    </screen>
    
   	<screen name="login">
        <section>
            <actions>
                <set field="titleProperty" value="PageTitleLogin" />
            </actions>
            <adadsfs/>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <platform-specific>
		            		<html><html-template location="component://example/webapp/example/common/login.ftl"/></html>
		            	</platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
</screens>